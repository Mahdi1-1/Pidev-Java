<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.image.ImageView?>
<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controllers.Evenement.EvenementCard"
            prefWidth="220" prefHeight="300"
            style="-fx-background-color: transparent;">

    <ScrollPane fitToWidth="true"
                styleClass="main-scroll-pane"
                AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
                AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
                hbarPolicy="NEVER" vbarPolicy="AS_NEEDED">

        <VBox spacing="10" alignment="TOP_CENTER"
              layoutX="10" layoutY="10"
              style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 6, 0.2, 0, 3);"
              prefWidth="220" prefHeight="340">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>
            <Label text="Ceci est un texte simple." />

            <!-- Image principale de l'événement -->
            <ImageView fx:id="eventImage"
                       fitWidth="320" fitHeight="180"
                       preserveRatio="true"
                       style="-fx-background-radius: 10;" />



            <Label fx:id="titreLabel"
                   text="Titre"
                   style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-alignment: center;"/>

            <Label fx:id="descriptionLabel"
                   text="Description"
                   style="-fx-font-size: 12px; -fx-text-fill: #666666; -fx-text-alignment: center;"/>

            <Label fx:id="lieuLabel"
                   text="Lieu"
                   style="-fx-font-size: 12px; -fx-text-fill: #666666; -fx-text-alignment: center;"/>

            <HBox spacing="5" alignment="CENTER">
                <Label fx:id="dateDebutLabel"
                       text="Début"
                       style="-fx-font-size: 11px;"/>
                <Label fx:id="dateFinLabel"
                       text="Fin"
                       style="-fx-font-size: 11px;"/>
            </HBox>

            <Label fx:id="statutLabel"
                   text="Statut"
                   style="-fx-font-size: 11px; -fx-text-fill: #666666;"/>

            <Label fx:id="categorieLabel"
                   text="Catégorie"
                   style="-fx-font-size: 11px; -fx-text-fill: #5B87FF;"/>

            <Button fx:id="voirDetailsButton"
                    text="Voir Détails"
                    onAction="#handleVoirDetails"
                    style="-fx-font-size: 11px; -fx-background-color: #5B87FF; -fx-text-fill: white; -fx-background-radius: 5;"
                    prefWidth="100" prefHeight="24"/>
        </VBox>

    </ScrollPane>
</AnchorPane>