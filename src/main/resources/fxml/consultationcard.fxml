<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox styleClass="card" spacing="10.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tests.ConsultationCardController">
    <padding>
        <Insets top="16" right="16" bottom="16" left="16"/>
    </padding>

    <GridPane hgap="10" vgap="5">
        <columnConstraints>
            <ColumnConstraints minWidth="100" />
            <ColumnConstraints hgrow="ALWAYS" />
        </columnConstraints>

        <Label fx:id="idLabel" styleClass="card-id" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <Label fx:id="statusLabel" styleClass="status-label" GridPane.columnIndex="1" GridPane.rowIndex="0" />
        
        <Label text="Type:" styleClass="card-section-title" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <Label fx:id="typeLabel" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        
        <Label text="Date:" styleClass="card-section-title" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <Label fx:id="dateLabel" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        
        <Label text="Médecin:" styleClass="card-section-title" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <Label fx:id="medecinLabel" GridPane.columnIndex="1" GridPane.rowIndex="3" />
        
        <Label text="Patient:" styleClass="card-section-title" GridPane.columnIndex="0" GridPane.rowIndex="4" />
        <Label fx:id="patientLabel" GridPane.columnIndex="1" GridPane.rowIndex="4" />
    </GridPane>

    <Label text="Commentaire:" styleClass="card-section-title" />
    <TextArea fx:id="commentaireTextArea" wrapText="true" editable="false" prefRowCount="3" />

    <HBox spacing="10.0" alignment="CENTER_RIGHT">
        <Button fx:id="detailsButton" text="Détails" styleClass="button-secondary" />
        <Button fx:id="editButton" text="Modifier" styleClass="button-primary" />
        <Button fx:id="deleteButton" text="Supprimer" styleClass="button-danger" />
    </HBox>
</VBox>