<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import java.net.URL?>

<VBox spacing="16.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tests.ConsultationListController">
    <stylesheets>
        <URL value="@../Styles.css" />
    </stylesheets>
    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>

    <HBox spacing="10.0" alignment="CENTER_LEFT">
        <Label styleClass="title-label" text="Consultations" />
        <Region HBox.hgrow="ALWAYS" />
        <Button fx:id="addButton" text="Nouvelle Consultation" styleClass="button-primary" onAction="#handleAddConsultation" />
    </HBox>

    <HBox spacing="10.0" alignment="CENTER_LEFT">
        <ChoiceBox fx:id="statusFilter" />
        <ChoiceBox fx:id="typeFilter"  />
        <DatePicker fx:id="dateFilter" promptText="Date" />
        <Region HBox.hgrow="ALWAYS" />
        <TextField fx:id="searchField" promptText="Rechercher..." prefWidth="200" />
    </HBox>

    <ScrollPane VBox.vgrow="ALWAYS" fitToWidth="true" styleClass="edge-to-edge">
        <VBox fx:id="consultationList" spacing="10.0" />
    </ScrollPane>

    <HBox spacing="10.0" alignment="CENTER">
        <Button fx:id="prevButton" text="Précédent" />
        <Label fx:id="pageLabel" text="Page 1 of 1" />
        <Button fx:id="nextButton" text="Suivant" />
    </HBox>
</VBox>