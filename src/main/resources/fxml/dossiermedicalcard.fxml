<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import java.net.URL?>

<AnchorPane styleClass="card" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <stylesheets>
        <URL value="@../Styles.css" />
    </stylesheets>
    <VBox spacing="8.0" AnchorPane.topAnchor="10.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0">
        <padding>
            <Insets top="10" right="10" bottom="10" left="10" />
        </padding>
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <Label fx:id="idLabel" styleClass="card-id" text="ID: 123" />
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="dateLabel" styleClass="date-label" text="01/01/2023" />
        </HBox>
        
        <Separator />
        
        <HBox spacing="10.0">
            <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                <Label styleClass="card-section-title" text="Utilisateur" />
                <Label fx:id="utilisateurLabel" text="ID: 456" />
            </VBox>
            <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                <Label styleClass="card-section-title" text="Unité" />
                <Label fx:id="uniteLabel" text="kg" />
            </VBox>
        </HBox>
        
        <HBox spacing="10.0">
            <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                <Label styleClass="card-section-title" text="Mesure" />
                <Label fx:id="mesureLabel" text="75.5" />
            </VBox>
            <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                <Label styleClass="card-section-title" text="Fichier" />
                <Label fx:id="fichierLabel" text="rapport.pdf" />
            </VBox>
        </HBox>
        
        <HBox spacing="10.0" alignment="CENTER_RIGHT">
            <Button fx:id="detailsButton" text="Détails" styleClass="button-primary" />
            <Button fx:id="editButton" text="Modifier" styleClass="button-secondary" />
            <Button fx:id="deleteButton" text="Supprimer" styleClass="button-danger" />
        </HBox>
    </VBox>
</AnchorPane>