<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="20" alignment="CENTER" style="-fx-background-color: white; -fx-padding: 20;">
    <Label text="Détails de l'Événement" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
    
    <GridPane hgap="10" vgap="10">
        <Label text="Titre:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <Label fx:id="titreLabel" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        
        <Label text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextArea fx:id="descriptionText" editable="false" wrapText="true" 
                 GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        
        <Label text="Date de début:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <Label fx:id="dateDebutLabel" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        
        <Label text="Date de fin:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <Label fx:id="dateFinLabel" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        
        <Label text="Lieu:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <Label fx:id="lieuLabel" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
        
        <Label text="Statut:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
        <Label fx:id="statutLabel" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
    </GridPane>
    
    <Button text="Retour" onAction="#handleRetour" 
            style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
</VBox> 